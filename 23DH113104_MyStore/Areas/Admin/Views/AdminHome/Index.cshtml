@model _23DH113104_MyStore.Models.ViewModel.HomeProductVM
@{
    ViewBag.Title = "Customer Home Page";
}
<style>
    /* Cấu hình phần Banner */
    #banner {
        background: linear-gradient(45deg, #ff8a00, #e52e71);
        color: #fff;
        padding: 60px 20px;
        text-align: center;
    }

    .banner-content h2 {
        font-size: 2.5em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .banner-content p {
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .banner-content .btn {
        background-color: #fff;
        color: #e52e71;
        padding: 12px 25px;
        font-size: 1em;
        font-weight: bold;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .banner-content .btn:hover {
            background-color: #ff8a00;
            color: #fff;
        }

    /* Cấu hình phần Tìm kiếm sản phẩm */
    .container-fluid.searchProd {
        padding: 40px 20px;
        background-color: #f9f9f9;
        text-align: center;
    }

        .container-fluid.searchProd h2 {
            font-size: 2em;
            margin-bottom: 20px;
            color: #333;
        }

    .search-container {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .search-input {
        padding: 10px;
        width: 300px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1em;
    }

    .search-button {
        padding: 10px 20px;
        background-color: #e52e71;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .search-button:hover {
            background-color: #ff8a00;
        }

    /* Cấu hình phần Sản phẩm nổi bật và Sản phẩm mới */
    .section-title {
        font-size: 2em;
        text-align: center;
        margin: 40px 0;
        color: #333;
    }

    .featured-products, .new-products {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .product-card {
        width: 250px;
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

        .product-card img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #e0e0e0;
        }

        .product-card .product-info {
            padding: 15px;
            text-align: center;
        }

            .product-card .product-info h3 {
                font-size: 1.2em;
                color: #333;
                margin: 10px 0;
            }

            .product-card .product-info p {
                font-size: 1em;
                color: #777;
            }

            .product-card .product-info .price {
                font-size: 1.2em;
                color: #e52e71;
                font-weight: bold;
            }

        .product-card .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #e52e71;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            .product-card .btn:hover {
                background-color: #ff8a00;
            }
</style>
<!-- PHẦN BANNER -->
<section id="banner">
    <div class="banner-content">
        <h2>Chào mừng đến trang web E-commerce</h2>
        <p>Mua sắm trực tuyến với hàng ngàn sản phẩm đa dạng và chất lượng</p>
        <a href="#" class="btn">Bắt đầu mua sắm tại đây</a>
    </div>
</section>

<!-- PHẦN TÌM KIẾM SẢN PHẨM -->
<section class="container-fluid searchProd">
    <h2>Tìm kiếm sản phẩm</h2>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
            {
                @class = "search-input",
                placeholder = "Nhập tên, mã, tả hoặc chủng loại sản phẩm"
            })
            <button type="submit" class="search-button">Tìm kiếm</button>
        </div>
    }
</section>
<hr />

<!-- PHẦN SẢN PHẨM NỔI BẬT -->
@Html.Partial("_PVFeatureProduct", Model)

<!-- PHẦN SẢN PHẨM MỚI -->
@Html.Partial("_PVNewProduct", Model)

