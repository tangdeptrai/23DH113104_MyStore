@model _23DH113104_MyStore.Models.Category

<style type="text/css">
    .form-group {
        padding: 10px;
    }

        .form-group .col-md-offset-2 {
            padding-bottom: 12px;
        }

    .btn-primary.btn-red {
        background-color: red;
        border-color: red;
    }
</style>

<div class="form-group">
    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-primary btn-sm btn-red">Save</button>
    </div>
    <div>
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>

