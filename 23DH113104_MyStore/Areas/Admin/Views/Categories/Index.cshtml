@model IEnumerable<_23DH113104_MyStore.Models.Category>

@*//trả về 1 danh sách*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .table tr:nth-child(even) {
        background-color: #f2f2f2; /* Màu xám nhạt cho các dòng chẵn */
    }

    .table tr:nth-child(odd) {
        background-color: #ffffff; /* Màu trắng cho các dòng lẻ */
    }

    h1 {
        text-align: center;
    }

    .table th {
        background-color: lightslategrey;
        padding: 15px;
        font-size: 1.5rem;
    }
</style>
<h1>Danh mục các sản phẩm</h1>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CategoryName) *@
            Tên các danh mục đang có:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            </td>

        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới danh mục", "Create", null, new { @class = "btn btn-primary" })
</p>