@model _23DH113104_MyStore.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Category</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @* lưu id hiện tại của bản ghi *@
        @Html.HiddenFor(model => model.CategoryID)
        @* giá trị sẽ được truyền vào hàm bind *@

        @* Nhúng patial vào form cha *@
        @Html.Partial("PVCreateEditCategory", Model)
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

